.footer-container
	@media screen and (max-width: 767px)
		.footer__about,
		.footer__contacts,
		.footer__subscribe
			width 100%
			margin-bottom 40px

		.about__text,
		.contacts__caption,
		.subscribe__caption
			margin-bottom 20px
.header-container
	@media screen and (max-width: 1199px)
		.header
			.header__navigation
				display none

			.header__menu-icon
				transform translateY(-50%) translateX(0%)
.main-block
	@media screen and (min-width: 1025px)
		@media screen and (max-height: 599px)
			min-height 599px

			.slide__info-wrapper
				bottom 50px
				top auto
