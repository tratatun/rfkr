.link
	@extend $transitionDefault
	display inline-block
	width 48%
	background-color $whiteGray
	padding 24px
	margin-bottom 42px
	&:nth-child(odd)
		margin-right 3.4%
	&:hover
		background-color rgba(28, 33, 47, 0.05)
		.row__link-text
			color $blue

	.link__caption
		@extend $defaultFontSize
		color $defaultBlack
		margin-bottom 48px

	.link__row
		position relative
		&:after
			@extend $clearBoth

	.row__link-text
		@extend $transitionDefault
		color $blueJeans
		float left

	.row__icon
		float right
		sizeElement(24px, 24px)