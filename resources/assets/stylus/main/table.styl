.table
	width 100%
	border-spacing 0 2px
	margin-top 21px
	margin-bottom 6px

	th, td
		text-align left
		padding-right 10px
		&:first-child
			padding-left 10px


	th
		@extend $firasansMedium
		@extend $smallerFontSize
		opacity .4
		line-height 30px

	td
		background-color $whiteGray
		height $inputHeight
		line-height 1.2
		&:last-child span
			@extend $semiOpacity
		a
			@extend $transitionDefault
			@extend $cursorPointer
			color $blueJeans
			&:hover
				color $blue

	button
		@extend $defaultFontSize
		@extend $cursorPointer
		color $red
		background-color $transparent

	.link-change
		@extend $transitionDefault
		color $red
		&:hover
			color $red
