		width: 76vw
	@media screen and (max-width: 767px)
		width 100%

$blueBtn
	display inline-block
	background-color $blue
	line-height 56px
	padding 0 50px
	text-transform uppercase
	font-family "Roboto-Medium"
	min-width 226px
	text-align center
	color $white
	&:hover
		color $white

$grayBtn
	display inline-block
	background-color transparent
	text-transform uppercase
	font-family "Roboto-Medium"
	text-align center
	font-size linear-interpolation((320px 10px) (1600px 12px))
	opacity .6
	color $fullBlack
	border 1px solid $fullBlackSemi
	padding 8px 24px
	cursor pointer
	transition all .3s
	&:hover
