.form-group-block
	padding 32px
	background-color $whiteGray
	margin-bottom 32px
	position relative
	&:after
		@extend $clearBoth

	.form-group__tip
		@extend $smallerFontSize
		@extend $defaultOpacity
		.required
			color $red

	.form-group__button
		@extend $grayBtn
		display block
		margin 16px 0
		&[disabled]
			opacity .12
			&:hover
				background-color transparent
				cursor default
				color $defaultBlack

	.form-group__captcha
		sizeElement(100%, 125px)
		border solid 1px rgba(28, 33, 47, 0.4)
		background-color $white
		margin-bottom 4px

.form-group-block_type
	.form-group
		width 47%

.form-group-block_user
	.form-group
		float left
		width 25%
		padding-right 3%

.form-group-block_address
	.form-group
		width 72%

.form-group-block_email
	.form-group
		width 47%

.form-group-block_additionally .toogle__body
	.form-group
		float left
		&:nth-child(1)
			width 75%
			padding-right 3%
		&:nth-child(2)
			width 25%
			padding-right 3%

.form-group-block_thematics
	.form-group
		width 47%


.form-group-block_treatment
	.form-group
		width 72%

.form-group-block_attach
	.form-group
		padding-right 3%
		&:last-child
			margin-top 32px

.form-group-block_captcha
	.form-group
		width 36%
