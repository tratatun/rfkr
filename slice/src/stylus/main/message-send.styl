.message-send
	@extend $mainContainer
	padding-top "calc(44px + %s)" % $headerShortHeight

	.message-send__caption
		margin-bottom 3px

	.message-send__subcaption
		margin-bottom 32px

	.message-send__caption,
	.message-send__subcaption
		padding-left 32px
		
	.form__footer
		text-align right
		padding 32px 32px 40px 0

	.message-send__reset
		@extend $grayBtnBig
		margin-right 32px

	.message-send__submit
		@extend $blueBtn
		font-size 16px

	.toogle
		.toogle__header
			padding 0
			a
				@extend $robotoMedium
				@extend $defaultOpacity
				@extend $defaultFontSize
				display block
				color $defaultBlack
				padding-left 40px
				position relative
				&:hover
					color $defaultBlack
				&:after
					@extend $transitionDefault
					sizeElement(0, 0)
					border 5px solid transparent
					border-top-color $fullBlackSemi
					top 38%
					left 7px
					transform-origin center top
					transform rotate(0)
		&.open
			a:after
				transform rotate(180deg)
				top 50%

		.toogle__body
			padding-top 30px

