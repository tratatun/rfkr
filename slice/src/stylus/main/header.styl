.headers-container
	absoluteElement(fixed, 0, 0)
	width 100%
	z-index 10
	&.scrolled
		.header-wrapper
			background-color rgba(13, 59, 95, .5)

	.search-container
		height 0
		background-color $blueDark
		@extend $transitionSlow
		overflow hidden
		border-bottom 1px solid $whiteOpacity

	.search
		@extend $mainContainer
		color $white

	.search__top-row
		position relative
		&:after
			@extend $clearBoth

	.top-row__close
		float right
		margin 46px 4px 0 0
		@extend $semiOpacity
		@extend $transitionDefault
		@extend $cursorPointer
		&:hover
			@extend $noneOpacity

	.top-row__caption
		float left
		@extend $robotoMedium
		margin 40px 0 35px 0

	.search__bottom-row
		position relative
		&:after
			@extend $clearBoth

	.bottom-row__left-col
		float left
		width 74.3%

	.bottom-row__right-col
		float right
		width 25.7%
		padding-left 32px

	.left-col__search-label
		display block
		color rgba(255, 255, 255, 0.6)
		@extend $smallerFontSize
		margin-bottom 7px

	.left-col__search-field
		sizeElement(100%, 48px)
		padding 0 16px

	.right-col__search-btn
		sizeElement(100%, 48px)
		border 1px solid $whiteOpacity
		background-color transparent
		text-align center
		line-height 48px
		@extend $robotoMedium
		@extend $textUppercase
		margin-top 23px
		letter-spacing 1.3px
		color $whiteSemi
		@extend $transitionDefault
		@extend $cursorPointer
		&:hover
			background-color $white
			color $blueDark
			border-color $white

	.subheader-container
		background-color $blueDark
		height $subHeaderHeight

	.subheader
		@extend $mainContainer
		height 100%
		display flex
		align-items center

	.subheader_right-col,
	.subheader_left-col,
	.subheader__treatment,
	.subheader__account,
	.search__icon,
	.treatment__icon,
	.account__icon,
	.subheader__search,
	.subheader__treatment,
	.subheader__account
		display inline-block

	.subheader_left-col
		width 20%
		text-align left

	.subheader_right-col
		width 80%
		text-align right

	.subheader__search,
	.subheader__treatment,
	.subheader__account
		position relative
		white-space nowrap
		@extend $smallFontSize
		color $white
		cursor pointer
		opacity .5
		@extend $transitionDefault
		&:hover
			opacity 1

	.subheader__account:hover
		.account__text:after
			transform rotate(180deg)
			top 70%


	.search__icon svg,
	.treatment__icon svg
		sizeElement(20px, 24px)


	.account__icon svg
		sizeElement(32px, 32px)

	.search__icon,
	.treatment__icon,
	.account__icon
		absoluteElement(absolute, 50%, 0)
		@extend $centerElement

	.search__icon
		left 11px

	.search__text
		padding-left 40px

	.treatment__text
		padding-left 26px
		padding-right 3.8em

	.account__text
		padding-left 32px
		padding-right 35px
		position relative
		&:after
			@extend $pseudoElement
			sizeElement(0, 0)
			border 5px solid transparent
			border-top-color $white
			top 43%
			right 7px
			transform-origin center top
			@extend $transitionDefault

	.header-wrapper
		border-bottom 1px solid rgba(255, 255, 255, .2)

	.header
		@extend $mainContainer
		position relative
		height $headerHeight
		display flex
		align-items center

	.header__nav
		position absolute
		right 15px

	.nav__link
		@extend $robotoMedium
		font-size 15px
		&:not(:last-child)
			margin-right 2.4em



