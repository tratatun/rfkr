.last-news-wrapper
	background-color rgba(28, 33, 47, 0.05)
	padding-top 32px

	.last-news
		@extend $mainContainer

	.last-news__header
		position relative
		margin-bottom 30px
		&:after
			@extend $clearBoth

	.header__caption
		float left

	.header__btn
		@extend $grayBtn
		float right
		margin -4px -4px 0 0

	.last-news__content
		max-height 624px
		position relative
		overflow hidden
		padding-bottom 72px
		&:after
			@extend $pseudoElement
			sizeElement(100%, 72px)
			bottom 0
			left 0
			background-image linear-gradient(to bottom, rgba(243, 244, 244, 0.5), #f3f4f4)
			pointer-events none

	.content-block
		position relative
		width 100%
		max-height 624px
		&:after
			@extend $clearBoth

	.last-new
		position relative
		float left
		margin-bottom 35px
		&:after
			@extend $pseudoElement
			bottom 0
			left 0
			sizeElement(97%, 1px)
			background-color $defaultBlack
			opacity .06
		&:nth-child(odd)
			width 50%
			margin-right 1.5%

		&:nth-child(even)
			width 48.5%

	.last-new__data
		@extend $smallerFontSize
		opacity .4
		margin-bottom 5px

	.last-new__description
		@extend $robotoMedium
		@extend $middleFontSize
		@extend $transitionDefault
		@extend $cursorPointer
		display block
		line-height 1.7
		height $lastNewsHeight
		overflow hidden
		margin-bottom 32px
		color $defaultBlack
		max-width 97%
		&:hover
			color $blue

